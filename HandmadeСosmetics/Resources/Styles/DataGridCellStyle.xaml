<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="DataGridCell" TargetType="DataGridCell">
        <Setter Property="Margin" Value="0" />
        <Setter Property="Selector.BorderBrush" Value="Bisque" />
        <Setter Property="Background" Value="Bisque" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontStyle" Value="Italic" />
        <Style.Triggers>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="DarkGray" />
                <Setter Property="Selector.BorderBrush" Value="DarkGray" />
            </Trigger>
        </Style.Triggers>
    </Style>
    <Style x:Key="StyleHeader" TargetType="DataGridColumnHeader">
        <Setter Property="Background" Value="CadetBlue" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
    </Style>
</ResourceDictionary>